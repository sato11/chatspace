.chat-group-form
  %h1 新規チャットグループ
  #new_chat_group.new_chat_group
    = form_for @group do |f|
      .chat-group-form__field.clearfix
        .chat-group-form__field--left
          .chat-group-form__label
            = f.label :グループ名
        .chat-group-form__field--right
          #chat_group_name
            = f.text_field :name, placeholder: "グループ名を入力してください", class: 'chat-group-form__input'
      .chat-group-form__field.clearfix
        .chat-group-form__field--left
          .chat-group-form__label
            = f.label :チャットメンバーを追加
        .chat-group-form__field--right
          .chat-group-form__search.clearfix
            #user-search-field
              %input.chat-group-form__input
              %button{id: 'search'}
      #user-search-result.clearfix
        #user-search-result__field--left
        #user-search-result__field--right
          %ul#result-field
      .chat-group-form__field.clearfix
        .chat-group-form__field--left
          .chat-group-form__label
            = f.label :チャットメンバー
        .chat-group-form__field--right
          %ul#added-users
            %li.chat-group-user
              .chat-group-user__name= current_user.name
      .chat-group-form__field.clearfix
        .chat-group-form__field--left
        .chat-group-form__field--right
          = f.submit "Save", class: 'chat-group-form__action-btn'
