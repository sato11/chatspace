#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 Edit Account
      %h5 アカウントの編集
      = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn'
      = link_to "トップページに戻る", :back, class: 'btn'
    .account-page__inner--right.user-form
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        = devise_error_messages!
        - p = DevisePresenter.new(f, self)
        = p.text_field_block(:name, 'Name', autofocus: true)
        = p.text_field_block(:email, 'メールアドレス')
        = p.password_field_block(:password, 'パスワード', autocomplete: 'off', message: '(変更したくない場合は、空白のままにしておいてください)')
        = p.password_field_block(:password_confirmation, 'パスワード', autocomplete: 'off', message: '(確認)')
        = p.password_field_block(:current_password, '現在のパスワード', autocomplete: 'off', message: '(変更には現在のパスワードの入力が必要です)')
        .actions
          = f.submit "Update", class: 'btn'
